{
  "name": "japan-address-mcp",
  "version": "0.1.0",
  "description": "日本の住所を正規化・検証するMCPサーバー。郵便番号検索、住所正規化、バリデーション機能を提供。",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "japan-address-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall.js || true"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "japan",
    "japanese",
    "address",
    "postal-code",
    "zipcode",
    "normalize",
    "validation",
    "claude",
    "ai",
    "llm"
  ],
  "author": "shinogw",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shinogw/japan-address-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/shinogw/japan-address-mcp/issues"
  },
  "homepage": "https://github.com/shinogw/japan-address-mcp#readme",
  "files": [
    "dist",
    "scripts/download-postal-data.ts",
    "scripts/postinstall.js",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  }
}
